<%= concave_error_messages_for(@space) %>

<%= field_set_tag nil do %>
  <%= hidden_field_tag "course_id", @course.id %>

  <%= f.label :name, "Nome" %>
  <%= f.text_field :name %>
  <span class="tip">Nome da disciplina</span>
  <%= concave_errors_for(f.object, :name) %>

  <%= f.label :initials, "Sigla" %>
  <%= f.text_field :initials %>
  <span class="tip">Abreviação do nome em forma de sigla</span>

  <%= f.label :turn, "Turno" %>
  <%= f.text_field :turn %>
  <span class="tip">Ex.: Matutino</span>

  <% random_number = get_random_number%>
  <%= f.label :description, "Descrição Resumida" %>
  <%= f.text_area :description, :size => "50x7", :class => "desc-#{random_number}" %>
  <span class="tip">Informações da disciplina</span>
  <%= concave_errors_for(f.object, :description) %>
  <%= render :partial => 'shared/limit_char_field', :locals => { :class_textarea => "desc-#{random_number}" }%>

  <%= f.label :tag_list, raw("Palavras-chaves <span class='snippet'>(separadas por vírgula)</span> ") %>
  <%= f.text_field :tag_list %>
  <span class="tip">Áreas de estudo e interesses relacionados ao curso</span>
<% end %>
<hr />
<% unless edit %>
    <strong class="concave-label">Termos e condições do <%= Redu::Application.config.name %></strong>

    <div class="tos">
      Por favor não publique conteúdo que esteja protegido por direitos autorais, conteúdo obsceno ou que viole os termos e condições do <%= Redu::Application.config.name %>. Ao clicar no botão abaixo, você estará concordando com esses termos.
    </div>
<% end %>
